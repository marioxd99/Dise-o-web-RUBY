<div class="container-fluid" >
  <div class="card-body" id="note_container">
    <div class="title">
      <h3>Users</h3>
    </div>
    <div class="row">
        <div class="col-md-2"></div>

        <div class="col-md-8 col-centered">
          <div class="table-responsive">
            <table class="table">
              <thead>
                  <tr>
                      <th>ID</th>
                      <th>Email</th>
                      <th class="text-right">Actions</th>
                  </tr>
              </thead>
              
              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td><%= user.id %></td>
                    <td><%= user.email %></td>
                    <td class="td-actions text-right">
                      <%= link_to '<i class="material-icons">edit</i>'.html_safe, edit_user_path(user) %>
                      <%= link_to '<i class="material-icons">close</i>'.html_safe, user, method: :delete, data: { confirm: 'Are you sure?' } %>
                    </td>
                  </tr>
                <% end %>
              </tbody>                
            </table>
          </div>
        </div>
        <div class="col-md-2"></div>
        </div>
        <br>
        <br>

        <div class="row">
          <div class="col-md-8 col-centered">
            <%= link_to 'New User', new_user_path, class:"btn btn-primary"  %>
          </div>
        </div>
        
  </div>
</div>





